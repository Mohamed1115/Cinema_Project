@{
    ViewData["Title"] = "Movie Details";
}

@model Movie

<div class="card card-enhanced border-0 mb-4 fade-in">
    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-bold">
            <i class="fas fa-film me-2 text-primary"></i>@Model.Title
        </h5>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary hover-lift" asp-action="Edit" asp-route-id="@Model.Id">
                    <i class="fas fa-edit me-1"></i>Edit
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" 
                      data-confirm="Are you sure you want to delete this movie?">
                    <button type="submit" class="btn btn-outline-danger hover-lift">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        }
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- Image Gallery Section -->
            <div class="col-lg-5">
                <!-- Main Image -->
                <div class="mb-3 img-overlay-wrapper" data-lightbox="movie-gallery">
                    @if (!string.IsNullOrEmpty(Model.MainImage))
                    {
                        <img src="~/images/MovieImage/@Model.MainImage" alt="@Model.Title" 
                             class="img-fluid rounded-cinema w-100" style="max-height: 500px; object-fit: cover; cursor: pointer;" />
                    }
                    else
                    {
                        <img src="~/assets/img/generic/movie-1.jpg" alt="@Model.Title" 
                             class="img-fluid rounded-cinema w-100" style="max-height: 500px; object-fit: cover; cursor: pointer;" />
                    }
                    <div class="img-overlay">
                        <i class="fas fa-search-plus fa-3x text-white"></i>
                    </div>
                </div>

                <!-- Sub Images Gallery -->
                @if (Model.SubImages != null && Model.SubImages.Any())
                {
                    <div class="row g-2">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2"><i class="fas fa-images me-2"></i>Gallery</h6>
                        </div>
                        @foreach (var subImage in Model.SubImages.Take(6))
                        {
                            <div class="col-4">
                                <div class="img-overlay-wrapper" data-lightbox="movie-gallery">
                                    <img src="~/images/MovieImage/@subImage.ImageName" alt="Gallery Image" 
                                         class="img-fluid rounded-cinema w-100" style="height: 100px; object-fit: cover; cursor: pointer;" />
                                    <div class="img-overlay">
                                        <i class="fas fa-search-plus fa-2x text-white"></i>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Movie Information Section -->
            <div class="col-lg-7">
                <h2 class="mb-3 fw-bold">@Model.Title</h2>
                
                <!-- Status and Date -->
                <div class="mb-4">
                    @if (Model.Status)
                    {
                        <span class="badge bg-success badge-cinema me-2">
                            <i class="fas fa-play me-1"></i>Now Showing
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-info badge-cinema me-2">
                            <i class="fas fa-clock me-1"></i>Coming Soon
                        </span>
                    }
                    <span class="text-muted">
                        <i class="fas fa-calendar me-1"></i>@Model.Time
                    </span>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-2"><i class="fas fa-align-left me-2 text-primary"></i>Description</h6>
                    <p class="text-muted">@Model.Description</p>
                </div>

                <!-- Categories -->
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2"><i class="fas fa-tags me-2 text-primary"></i>Categories</h6>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var movieCategory in Model.Categories)
                            {
                                <span class="badge bg-soft-primary text-primary badge-cinema">
                                    @(movieCategory.Category?.Name ?? "Unknown")
                                </span>
                            }
                        </div>
                    </div>
                }

                <!-- Actors -->
                @if (Model.Actors != null && Model.Actors.Any())
                {
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2"><i class="fas fa-users me-2 text-primary"></i>Cast</h6>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var movieActor in Model.Actors)
                            {
                                <span class="badge bg-soft-info text-info badge-cinema">
                                    <i class="fas fa-user me-1"></i>@(movieActor.Actor?.Name ?? "Unknown")
                                </span>
                            }
                        </div>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="mt-5 d-flex gap-3 flex-wrap">
                    <a class="btn btn-primary btn-cinema btn-lg hover-lift" href="#">
                        <i class="fas fa-ticket-alt me-2"></i>Book Tickets
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-cinema btn-lg hover-lift">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize lightbox for movie gallery
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Movie details page loaded');
        });
    </script>
}
