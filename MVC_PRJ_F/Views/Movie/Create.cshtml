@{
    ViewData["Title"] = "Add New Movie";
}

@model Movie

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <span class="fas fa-plus me-2"></span>Add New Movie
        </h5>
    </div>
    <div class="card-body">
        @* عرض رسائل النجاح *@
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @* عرض رسائل الأخطاء *@
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Time" class="form-label">Movie Duration (Hours)</label>
                <input asp-for="Time" type="number" class="form-control" min="1" max="10" step="0.5" placeholder="e.g., 2 (for 2 hours)" />
                <span asp-validation-for="Time" class="text-danger"></span>
                <small class="text-muted">Enter movie duration in hours (e.g., 2 for 2 hours, 2.5 for 2.5 hours)</small>
            </div>

            <div class="mb-3">
                <div class="form-check form-switch">
                    <input asp-for="Status" class="form-check-input" type="checkbox" />
                    <label asp-for="Status" class="form-check-label">Now Showing</label>
                </div>
            </div>

            <div class="mb-3">
                <label for="Imag" class="form-label">Main Image</label>
                <input type="file" name="Imag" id="Imag" class="form-control" accept="image/*" />
            </div>

            <div class="mb-3">
                <label for="SubImages" class="form-label">Sub Images (Multiple)</label>
                <input type="file" name="SubImages" class="form-control" accept="image/*" multiple />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <span class="fas fa-save me-1"></span>Save
                </button>
                <a asp-action="Index" class="btn btn-falcon-default">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

