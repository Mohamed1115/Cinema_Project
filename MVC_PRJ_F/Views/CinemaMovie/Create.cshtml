@{
    ViewData["Title"] = "Add Movie Show";
}

@model CinemaMovies

<div class="card card-enhanced">
    <div class="card-header bg-gradient-primary">
        <h5 class="mb-0 text-white">
            <span class="fas fa-film me-2"></span>Add Movie Show
        </h5>
    </div>
    <div class="card-body">
        @* عرض رسائل النجاح *@
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @* عرض رسائل الأخطاء *@
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MovieId" class="form-label">Movie</label>
                    <select asp-for="MovieId" class="form-select" required>
                        <option value="">-- Select Movie --</option>
                        @* Movies will be populated from ViewBag *@
                        @if (ViewBag.Movies != null)
                        {
                            foreach (var movie in ViewBag.Movies)
                            {
                                <option value="@movie.Id">@movie.Title</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="MovieId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="CinemaId" class="form-label">Cinema</label>
                    <input asp-for="CinemaId" type="number" class="form-control" readonly />
                    <span asp-validation-for="CinemaId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HallId" class="form-label">Hall</label>
                    <input asp-for="HallId" type="number" class="form-control" readonly />
                    <span asp-validation-for="HallId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Time" class="form-label">Show Time</label>
                    <input asp-for="Time" type="time" class="form-control" required />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Ticket Price (EGP)</label>
                <input asp-for="Price" type="number" class="form-control" min="0" step="1" placeholder="e.g., 100" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-cinema">
                    <span class="fas fa-save me-1"></span>Save Show
                </button>
                <a asp-controller="Cinema" asp-action="GetById" asp-route-id="@Model.CinemaId" class="btn btn-falcon-default">
                    <i class="fas fa-arrow-left me-1"></i>Back to Cinema
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
