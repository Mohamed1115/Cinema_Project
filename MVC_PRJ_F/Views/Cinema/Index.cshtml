@{
    ViewData["Title"] = "All Cinemas";
}

@model List<Cinema>

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <span class="fas fa-building me-2"></span>All Cinemas
        </h5>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-sm btn-primary" asp-action="Create">
                <span class="fas fa-plus me-1"></span>Add New Cinema
            </a>
        }
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="row g-3">
                @foreach (var cinema in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-start mb-3">
                                    <div class="avatar avatar-3xl me-3">
                                        @if (!string.IsNullOrEmpty(cinema.Image))
                                        {
                                            <img class="rounded" src="~/images/CinemaImage/@cinema.Image" alt="@cinema.Name" />
                                        }
                                        else
                                        {
                                            <img class="rounded" src="~/assets/img/icons/cinema-icon.png" alt="@cinema.Name" />
                                        }
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@cinema.Name</h6>
                                        <p class="fs-11 text-600 mb-2">
                                            <span class="fas fa-map-marker-alt me-1"></span>@cinema.City, @cinema.Country
                                        </p>
                                        @if (cinema.Halls != null && cinema.Halls.Any())
                                        {
                                            <span class="badge bg-soft-success text-success">@cinema.Halls.Count Halls</span>
                                        }
                                    </div>
                                </div>
                                <p class="text-600 fs-11 mb-2">
                                    <span class="fas fa-phone me-1"></span>@cinema.Phone
                                </p>
                                <p class="text-600 fs-11 mb-2">
                                    <span class="fas fa-envelope me-1"></span>@cinema.Email
                                </p>
                                <p class="text-600 fs-11 mb-3">@cinema.Address</p>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-primary flex-fill" asp-action="GetById" asp-route-id="@cinema.Id">
                                        <span class="fas fa-eye me-1"></span>View Details
                                    </a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="btn btn-sm btn-falcon-default" asp-action="Edit" asp-route-id="@cinema.Id">
                                            <span class="fas fa-edit"></span>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@cinema.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this cinema?');">
                                            <button type="submit" class="btn btn-sm btn-falcon-danger">
                                                <span class="fas fa-trash"></span>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <p class="mb-0">No cinemas found. @if (User.Identity.IsAuthenticated) { <a asp-action="Create">Add a cinema</a> }</p>
            </div>
        }
    </div>
</div>

