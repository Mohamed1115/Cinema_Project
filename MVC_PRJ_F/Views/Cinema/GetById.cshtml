@{
    ViewData["Title"] = "Cinema Details";
}

@model Cinema

<div class="card mb-3 card-enhanced">
    <div class="card-header d-flex justify-content-between align-items-center bg-gradient-primary">
        <h5 class="mb-0 text-white">
            <span class="fas fa-building me-2"></span>@Model.Name
        </h5>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex gap-2">
                <a class="btn btn-sm btn-light" asp-action="Edit" asp-route-id="@Model.Id">
                    <span class="fas fa-edit me-1"></span>Edit
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this cinema?');">
                    <button type="submit" class="btn btn-sm btn-danger">
                        <span class="fas fa-trash me-1"></span>Delete
                    </button>
                </form>
            </div>
        }
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Cinema Image -->
            <div class="col-md-4 mb-3">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/images/CinemaImage/@Model.Image" alt="@Model.Name" class="img-fluid rounded shadow-sm hover-scale" style="width: 100%; height: 300px; object-fit: cover;" />
                }
                else
                {
                    <div class="text-center p-5 bg-light rounded">
                        <i class="fas fa-building fa-5x text-primary mb-3"></i>
                        <p class="text-muted">No image available</p>
                    </div>
                }
            </div>

            <!-- Cinema Info -->
            <div class="col-md-8">
                <h3 class="mb-3">@Model.Name</h3>
                
                <div class="row mb-4">
                    <div class="col-md-6 mb-2">
                        <p class="mb-2">
                            <i class="fas fa-map-marker-alt text-danger me-2"></i>
                            <strong>Address:</strong> @Model.Address
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-city text-primary me-2"></i>
                            <strong>City:</strong> @Model.City
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-globe text-success me-2"></i>
                            <strong>Country:</strong> @Model.Country
                        </p>
                    </div>
                    <div class="col-md-6 mb-2">
                        <p class="mb-2">
                            <i class="fas fa-phone text-info me-2"></i>
                            <strong>Phone:</strong> <a href="tel:@Model.Phone">@Model.Phone</a>
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-envelope text-warning me-2"></i>
                            <strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Halls Section -->
        <div class="mt-4">
            <h5 class="mb-3">
                <i class="fas fa-door-open me-2 text-primary"></i>
                Cinema Halls
                @if (Model.Halls != null && Model.Halls.Any())
                {
                    <span class="badge bg-primary ms-2">@Model.Halls.Count</span>
                }
            </h5>
            
            @if (Model.Halls != null && Model.Halls.Any())
            {
                <div class="row g-3">
                    @foreach (var hall in Model.Halls)
                    {
                        <div class="col-md-4 col-lg-3">
                            <div class="card card-enhanced hover-lift h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-couch fa-2x text-primary mb-2"></i>
                                    <h6 class="mb-1">@hall.Name</h6>
                                    <p class="text-muted small mb-1">@hall.Type</p>
                                    <p class="mb-2">
                                        <span class="badge bg-soft-primary text-primary">
                                            <i class="fas fa-chair me-1"></i>@hall.Capacity seats
                                        </span>
                                    </p>
                                    
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div class="d-grid gap-1">
                                            <a asp-controller="CinemaMovie" 
                                               asp-action="Create" 
                                               asp-route-hallId="@hall.Id"
                                               asp-route-cinemaId="@Model.Id"
                                               class="btn btn-sm btn-cinema">
                                                <i class="fas fa-plus me-1"></i>Add Show
                                            </a>
                                            <a asp-controller="Hall" 
                                               asp-action="Edit" 
                                               asp-route-id="@hall.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No halls available for this cinema yet.
                </div>
            }
        </div>

        <!-- Movies Section -->
        <div class="mt-4">
            <h5 class="mb-3">
                <i class="fas fa-film me-2 text-danger"></i>
                Available Movies
                @if (Model.Movies != null && Model.Movies.Any())
                {
                    <span class="badge bg-danger ms-2">@Model.Movies.Count</span>
                }
            </h5>
            
            @if (Model.Movies != null && Model.Movies.Any())
            {
                var displayedMovies = Model.Movies.Take(6);
                <div class="row g-3">
                    @foreach (var cinemaMovie in displayedMovies)
                    {
                        @if (cinemaMovie.Movie != null)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 border-0 shadow-sm hover-lift">
                                    @if (!string.IsNullOrEmpty(cinemaMovie.Movie.MainImage))
                                    {
                                        <img src="~/images/MovieImage/@cinemaMovie.Movie.MainImage" 
                                             alt="@cinemaMovie.Movie.Title" 
                                             class="card-img-top"
                                             style="height: 300px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                             style="height: 300px;">
                                            <i class="fas fa-film fa-3x text-muted"></i>
                                        </div>
                                    }
                                    
                                    <div class="card-body">
                                        <h5 class="card-title mb-2">@cinemaMovie.Movie.Title</h5>
                                        
                                        @if (cinemaMovie.Movie.Status)
                                        {
                                            <span class="badge bg-success mb-3">
                                                <i class="fas fa-play-circle me-1"></i>Now Showing
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning mb-3">
                                                <i class="fas fa-clock me-1"></i>Coming Soon
                                            </span>
                                        }
                                        
                                        <div class="d-grid gap-2">
                                            <a href="@Url.Action("GetById", "Movie", new { id = cinemaMovie.MovieId })" 
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-info-circle me-1"></i>Details
                                            </a>
                                            <a href="@Url.Action("GetAllByMovieId", "CinemaMovie", new { id = cinemaMovie.MovieId })" class="btn btn-primary btn-sm">
                                                <i class="fas fa-ticket-alt me-1"></i>Book Now
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                
                @if (Model.Movies.Count > 6)
                {
                    <div class="alert alert-light mt-3 text-center">
                        <i class="fas fa-plus-circle me-2"></i>
                        And <strong>@(Model.Movies.Count - 6)</strong> more movies available...
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No movies currently showing at this cinema.
                </div>
            }
        </div>

        <!-- Action Buttons -->
        <div class="mt-4 d-flex gap-2">
            <a asp-action="Index" class="btn btn-falcon-default">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Hall" asp-action="Create" asp-route-cinemaId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Add Hall
                </a>
            }
        </div>
    </div>
</div>
