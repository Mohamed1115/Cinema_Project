@{
    ViewData["Title"] = "Cinema Details";
}

@model Cinema

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <span class="fas fa-building me-2"></span>@Model.Name
        </h5>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex gap-2">
                <a class="btn btn-sm btn-falcon-default" asp-action="Edit" asp-route-id="@Model.Id">
                    <span class="fas fa-edit me-1"></span>Edit
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this cinema?');">
                    <button type="submit" class="btn btn-sm btn-falcon-danger">
                        <span class="fas fa-trash me-1"></span>Delete
                    </button>
                </form>
            </div>
        }
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/images/CinemaImage/@Model.Image" alt="@Model.Name" class="img-fluid rounded mb-3" />
                }
                else
                {
                    <img src="~/assets/img/icons/cinema-icon.png" alt="@Model.Name" class="img-fluid rounded mb-3" />
                }
            </div>
            <div class="col-md-8">
                <h3>@Model.Name</h3>
                
                <div class="mb-3">
                    <p class="mb-1">
                        <span class="fas fa-map-marker-alt me-2"></span><strong>Address:</strong> @Model.Address
                    </p>
                    <p class="mb-1">
                        <span class="fas fa-city me-2"></span><strong>City:</strong> @Model.City
                    </p>
                    <p class="mb-1">
                        <span class="fas fa-globe me-2"></span><strong>Country:</strong> @Model.Country
                    </p>
                    <p class="mb-1">
                        <span class="fas fa-phone me-2"></span><strong>Phone:</strong> @Model.Phone
                    </p>
                    <p class="mb-1">
                        <span class="fas fa-envelope me-2"></span><strong>Email:</strong> @Model.Email
                    </p>
                </div>

                @if (Model.Halls != null && Model.Halls.Any())
                {
                    <div class="mb-3">
                        <h6>Halls (@Model.Halls.Count)</h6>
                        <div class="row g-2">
                            @foreach (var hall in Model.Halls)
                            {
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="mb-1">@hall.Name</h6>
                                            <p class="fs-11 text-600 mb-0">Capacity: @hall.Capacity seats</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.Movies != null && Model.Movies.Any())
                {
                    <div class="mb-3">
                        <h6>Available Movies</h6>
                        <div class="row g-2">
                            @foreach (var cinemaMovie in Model.Movies.Take(6))
                            {
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="mb-1">@(cinemaMovie.Movie?.Title ?? "Unknown")</h6>
                                            <p class="fs-11 text-600 mb-1">Price: @cinemaMovie.Price EGP</p>
                                            <p class="fs-11 text-600 mb-0">Time: @cinemaMovie.Time</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.Movies.Count > 6)
                        {
                            <p class="text-muted fs-11 mt-2">And @(Model.Movies.Count - 6) more movies...</p>
                        }
                    </div>
                }

                <div class="mt-4">
                    <a class="btn btn-primary" href="#">
                        <span class="fas fa-ticket-alt me-1"></span>View Showtimes
                    </a>
                    <a asp-action="Index" class="btn btn-falcon-default ms-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

