@{
    ViewData["Title"] = "All Movies";
}

@model List<Movie>

<div class="card card-enhanced border-0 mb-4 fade-in">
    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-bold">
            <i class="fas fa-film me-2 text-primary"></i>All Movies
        </h5>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-cinema" asp-action="Create">
                <i class="fas fa-plus me-2"></i>Add New Movie
            </a>
        }
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var movie in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card card-movie h-100 border-0 shadow-sm">
                            <div class="position-relative overflow-hidden">
                                @if (!string.IsNullOrEmpty(movie.MainImage))
                                {
                                    <img class="card-img-top" src="~/images/MovieImage/@movie.MainImage" 
                                         alt="@movie.Title" style="height: 350px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img class="card-img-top" src="~/assets/img/generic/movie-1.jpg" 
                                         alt="@movie.Title" style="height: 350px; object-fit: cover;" />
                                }
                                @if (movie.Status)
                                {
                                    <span class="badge bg-success position-absolute top-0 end-0 m-3 badge-pulse">
                                        <i class="fas fa-play me-1"></i>Now Showing
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info position-absolute top-0 end-0 m-3">
                                        <i class="fas fa-clock me-1"></i>Coming Soon
                                    </span>
                                }
                                <div class="movie-overlay">
                                    <div class="text-white">
                                        <h6 class="text-white mb-2">@movie.Title</h6>
                                        <p class="small mb-0">Click to view details</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="mb-2 fw-bold">@movie.Title</h6>
                                <p class="text-muted small mb-2" style="min-height: 60px;">
                                    @(movie.Description?.Length > 80 ? movie.Description.Substring(0, 80) + "..." : movie.Description)
                                </p>
                                <div class="d-flex align-items-center mb-3 text-muted small">
                                    <i class="fas fa-calendar text-primary me-2"></i>
                                    <span>@movie.Time.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-primary btn-cinema flex-fill" asp-action="GetById" asp-route-id="@movie.Id">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="btn btn-outline-secondary hover-lift" asp-action="Edit" asp-route-id="@movie.Id" 
                                           title="Edit Movie">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@movie.Id" method="post" class="d-inline" 
                                              data-confirm="Are you sure you want to delete this movie?">
                                            <button type="submit" class="btn btn-outline-danger hover-lift" title="Delete Movie">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info alert-enhanced text-center border-0">
                <i class="fas fa-info-circle me-2"></i>
                <span>No movies found. @if (User.Identity.IsAuthenticated) { <a asp-action="Create" class="alert-link">Add a movie</a> }</span>
            </div>
        }
    </div>
</div>
