@{
    ViewData["Title"] = "All Movies";
}

@model List<Movie>

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <span class="fas fa-film me-2"></span>All Movies
        </h5>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-sm btn-primary" asp-action="Create">
                <span class="fas fa-plus me-1"></span>Add New Movie
            </a>
        }
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="row g-3">
                @foreach (var movie in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 overflow-hidden">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(movie.MainImage))
                                {
                                    <img class="card-img-top" src="~/images/MovieImage/@movie.MainImage" alt="@movie.Title" style="height: 300px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img class="card-img-top" src="~/assets/img/generic/movie-1.jpg" alt="@movie.Title" style="height: 300px; object-fit: cover;" />
                                }
                                @if (movie.Status)
                                {
                                    <span class="badge bg-success position-absolute top-0 end-0 m-2">Now Showing</span>
                                }
                                else
                                {
                                    <span class="badge bg-info position-absolute top-0 end-0 m-2">Coming Soon</span>
                                }
                            </div>
                            <div class="card-body">
                                <h6 class="mb-2">@movie.Title</h6>
                                <p class="fs-11 text-600 mb-2">@(movie.Description?.Length > 80 ? movie.Description.Substring(0, 80) + "..." : movie.Description)</p>
                                <p class="fs-11 text-600 mb-3">
                                    <span class="fas fa-calendar me-1"></span>@movie.DateTime.ToString("MMM dd, yyyy")
                                </p>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-primary flex-fill" asp-action="GetById" asp-route-id="@movie.Id">
                                        <span class="fas fa-eye me-1"></span>View
                                    </a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="btn btn-sm btn-falcon-default" asp-action="Edit" asp-route-id="@movie.Id">
                                            <span class="fas fa-edit"></span>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@movie.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                            <button type="submit" class="btn btn-sm btn-falcon-danger">
                                                <span class="fas fa-trash"></span>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <p class="mb-0">No movies found. @if (User.Identity.IsAuthenticated) { <a asp-action="Create">Add a movie</a> }</p>
            </div>
        }
    </div>
</div>

