@{
    ViewData["Title"] = "Edit Movie";
}

@model Movie

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <span class="fas fa-edit me-2"></span>Edit Movie
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Time" class="form-label"></label>
                <input asp-for="Time" type="datetime-local" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check form-switch">
                    <input asp-for="Status" class="form-check-input" type="checkbox" />
                    <label asp-for="Status" class="form-check-label">Now Showing</label>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.MainImage))
            {
                <div class="mb-3">
                    <label class="form-label">Current Image</label>
                    <div>
                        <img src="~/images/MovieImage/@Model.MainImage" alt="@Model.Title" style="max-height: 200px;" class="img-thumbnail" />
                    </div>
                </div>
            }

            <div class="mb-3">
                <label for="Imag" class="form-label">Update Main Image</label>
                <input type="file" name="Imag" class="form-control" accept="image/*" />
                <small class="text-muted">Leave empty to keep current image</small>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <span class="fas fa-save me-1"></span>Update
                </button>
                <a asp-action="GetById" asp-route-id="@Model.Id" class="btn btn-falcon-default">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

